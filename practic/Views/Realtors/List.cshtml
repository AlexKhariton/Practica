<h3>@Model.currCategory</h3>
<div class="row mt-5 mb-2">
    @{
        foreach(var realtor in Model.AllRealtors)
        {
            <div class="col-lg-4">
                <img class="img-thumbnail" src="@realtor.img" alt="@realtor.name">
                <h2>Риэлтор - @realtor.name</h2>
                <p>@realtor.shortDesc</p>
                <p>Цена: @realtor.price.ToString("c")</p>
                <input class="btn btn-success" type="submit" value="Подробнее" asp-controller="Realtors" asp-action="Item" />
            </div>
        }
    }
</div>